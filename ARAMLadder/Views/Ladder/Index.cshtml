@model IEnumerable<ARAMLadder.Models.RankingViewModel>
@{
    ViewData["Title"] = "Index";
    var pos = 0;
}

<h2>Classement</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Classement</th>
            <th>Nom</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            pos++;
            <tr>
                <td>@pos</td>
                <td><a  sp-action="Index" asp-controller="Match" asp-route-id="@item.RiotId">@item.Name</a></td>
                <td>@item.Score</td>
            </tr>
        }
    </tbody>
</table>

